<h1>Product List</h1>

<div class="row">
<% @products.each do |product| %>

<div class="col-md-3">
  <div><a href="products/<%= product.id %>"><%= product.name %></a>
  </div>
  	<p><%= product.description %></p>
  	<p>$<%= product.price %></p>
  	<p><a href="products/<%= product.id %>/edit">
  	<img src="<%= product.photo %>" height="200" width="200"/>
  		<p>Edit Item</p></a>
  		<a data-method="delete" href="/products/<%=product.id %>" rel="nofollow">Delete Item</a>
  	</br>
  	</br>
  	</br>

  </p>
</div>

  	
<% end %>
</div>

